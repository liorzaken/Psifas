= form_for @report do |f|
  - if @report.errors.any?
    #error_explanation
      %h2= "#{pluralize(@report.errors.count, "error")} prohibited this report from being saved:"
      %ul
        - @report.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :date
    = f.datetime_select :date
  .field
    = f.label :patientId
    = f.text_field :patientId
  .field
    = f.label :reporter
    = f.text_field :reporter
  .field
    = f.label :background
    = f.text_area :background
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :conclusion/patients/new
    = f.text_area :conclusion
  .actions
    = f.submit 'Save', :id => 'save'
