%h1 All Reporters
.CSSTableGenerator
  %table
    %tr
      %td Username
      %td Fullname
      %td
      %td
      %td
      
    - @users.each do |user|
      %tr
        %td= user.userName
        %td= user.fullName
        - if user.admin != true
          %td= link_to 'Show', user
          %td= link_to 'Edit', edit_user_path(user)
          %td= link_to 'Destroy', user, :method => :delete, :data => { :confirm => 'Are you sure?' }

