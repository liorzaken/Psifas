= form_for @user do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :userName
    = f.text_field :userName
  .field
    = f.label :password
    = f.text_field :password
  .field
    = f.label :fullName
    = f.text_field :fullName
  .field
    = f.label :manager
    = f.check_box :manager
  .actions
    = f.submit 'Save', :class => 'save'
