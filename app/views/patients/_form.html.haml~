= form_for @patient do |f|
  - if @patient.errors.any?
    #error_explanation
      %h2= "#{pluralize(@patient.errors.count, "error")} prohibited this patient from being saved:"
      %ul
        - @patient.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :patientId
    = f.text_field :patientId
  .field
    = f.label :birthDate
    = f.date_select :birthDate, :order => [:day, :month, :year], :start_year => 1970, end_year => Time.now - 18.year
  .field
    = f.label :fullName
    = f.text_field :fullName
  .field
    = f.label :address
    = f.text_field :address
  .actions
    = f.submit 'Save', :id => 'save'
